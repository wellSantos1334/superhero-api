{
  "name": "superhero-api",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "20.12.0"
  },
  "scripts": {
    "ts-node-config": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules",
    "production:start": "npm run migration-prod:run && npm run seed-prod:run && npm run start",
    "start": "node build/shared/infra/http/server.js",
    "build": "npm run swagger-autogen && babel src --extensions \".js,.ts\" --out-dir build --copy-files",
    "dev": "npm run ts-node-config src/shared/infra/http/server.ts",
    "eslint:fix": "eslint src/*",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli ",
    "migration:add": "npm run typeorm -- migration:generate ./src/shared/infra/typeorm/migrations/%npm_config_name% -d ./src/shared/infra/typeorm/index.ts",
    "migration:add-linux": "npm run typeorm -- migration:generate ./src/shared/infra/typeorm/migrations/$npm_config_name -d ./src/shared/infra/typeorm/index.ts",
    "migration:run": "npm run typeorm -- migration:run -d ./src/shared/infra/typeorm/index.ts",
    "migration-prod:run": "npm run typeorm -- migration:run -d ./build/shared/infra/typeorm/index.js",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/shared/infra/typeorm/index.ts",
    "test:unit": "jest -c jest.unit.config.ts",
    "test:e2e": "jest -c jest.e2e.config.ts $npm_config_path --runInBand -i --detectOpenHandles --forceExit",
    "test:e2e-coverage": "jest -c jest.e2e.config.ts -i --detectOpenHandles --forceExit --collectCoverage --runInBand",
    "test:e2e-verbose": "jest -c jest.e2e.config.ts $npm_config_path --runInBand -i --detectOpenHandles --forceExit --verbose",
    "swagger-autogen": "npm run ts-node-config swagger/swagger.ts",
    "seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./src/shared/infra/typeorm/index.ts"
  },
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^1.4.11",
    "@types/redis": "^4.0.11",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv-safe": "^8.2.0",
    "elastic-apm-node": "^3.48.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "firebase-admin": "^12.0.0",
    "joi-translation-pt-br": "0.0.10",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.3.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.1",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.1.13",
    "swagger-autogen": "^2.23.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.5.1",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.6",
    "@babel/core": "^7.22.8",
    "@babel/node": "^7.22.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.7",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-typescript": "^7.22.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.1",
    "@types/pg": "^8.10.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
